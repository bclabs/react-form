{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "semi": "off",
        "no-console": "off",
        "indent": ["error",4],
        "consistent-return": "warn",
        "comma-dangle": "off",
        "no-useless-constructor": "off",
        "react/jsx-indent-props": ["warn", 4],
        "react/prop-types": "off",
        "no-unused-expressions": ["warn", { "allowShortCircuit": true }]
    }
}
